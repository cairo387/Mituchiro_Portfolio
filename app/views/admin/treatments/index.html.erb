<div class="breadcrumb-navigation">
  <i class="fa fa-angle-right">&nbsp;</i>
  <span>HOME<span>
  <i class="fa fa-angle-right">&nbsp;</i>
  <span>TREATMENT<span>
  <i class="fa fa-angle-right">&nbsp;</i>
  <span>INDEX<span>

<div class="PageHead_practator">
  <div class="PageHead_practator-title">
    <h2>TREATMENT</h2>
  </div>
  <div class="PageHead_practator-text">
    <p>施術内容情報の新規作成・編集・削除用の画面</p>
  </div>
</div>

<div class="signup-display">
  <h1 class="article-display_title">TREATMENT</h1>
  <%= form_with model: @treatment, url: admin_treatments_path, local:true do |f| %>
    <table class="table table-borderless">
      <tr>
        <td><%= f.label :name, '施術名' %></td>
        <td><%= f.text_field :name, placeholder: "施術名", size: "30x3" %></td>
        <td><%= f.submit '　新規登録　', class: 'btn btn-secondary btn-lg' %></td>
      </tr>
    </table>
  <% end %>
  <div class="row">
    <div class="col-md-5 ml-3">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>施術名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <% @treatments.each do |treatment| %>
        <tbody>
          <tr>
            <td>
              <div class:"text-left">
                <%= treatment.name %>
              </div>
            </td>
            <td>
              <%= link_to "編集する",  edit_admin_treatment_path(treatment.id),  class: "btn btn-secondary px-4" %>
            </td>
            <td>
              <%= link_to "削除する",  admin_treatment_path(treatment.id), method: :delete,  class: "btn btn-secondary px-4" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>