<div class="breadcrumb-navigation">
  <i class="fa fa-angle-right">&nbsp;</i>
  <span>HOME<span>
  <i class="fa fa-angle-right">&nbsp;</i>
  <span>GENRE<span>
  <i class="fa fa-angle-right">&nbsp;</i>
  <span>INDEX<span>

<div class="PageHead_practator">
  <div class="PageHead_practator-title">
    <h2>GENRE</h2>
  </div>
  <div class="PageHead_practator-text">
    <h6>記事のジャンルの新規作成・閲覧・編集・削除用管理画面</h6>
  </div>
</div>

<div class="signup-display">
  <h1 class="article-display_title">GENRE</h1>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <table class="table table-borderless">
      <tr>
        <td><%= f.label :name, 'ジャンル名' %></td>
        <td><%= f.text_field :name, placeholder: "ジャンル名", size: "30x3" %></td>
        <td><%= f.submit '　新規登録　', class: 'btn btn-success btn-lg' %></td>
      </tr>
    </table>
  <% end %>
  <div class="row">
    <div class="col-md-5 ml-3">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td>
              <div class:"text-left">
                <%= genre.name %>
              </div>
            </td>
            <td>
              <%= link_to "編集する",  edit_admin_genre_path(genre.id),  class: "btn btn-secondary px-4" %>
            </td>
            <td>
              <%= link_to "削除する",  admin_genre_path(genre.id), method: :delete,  class: "btn btn-secondary px-4" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>